{
  "name": "@exercism/abap-test-runner",
  "private": true,
  "description": "Automated Test runner for exercism solutions in ABAP.",
  "version": "0.1.0",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/exercism/abap-test-runner"
  },
  "directories": {
    "lib": "./dist",
    "test": "./test"
  },
  "bin": {
    "abap-test-runner": "bin/run.sh"
  },
  "scripts": {
    "build": "tsc --outDir ./dist && git clone --depth=1 https://github.com/open-abap/open-abap || true",
    "test": "npm run build && mocha"
  },
  "mocha": {
    "recursive": true,
    "timeout": 60000,
    "spec": "dist/test/**/*.js",
    "require": "source-map-support/register"
  },
  "dependencies": {
    "@abaplint/transpiler-cli": "^2.7.92",
    "@abaplint/transpiler": "^2.7.92",
    "@abaplint/cli": "^2.102.34",
    "@abaplint/runtime": "^2.7.92"
  },
  "devDependencies": {
    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.8",
    "mocha": "^10.2.0",
    "source-map-support": "^0.5.21",
    "typescript": "^5.2.2",
    "@types/node": "^20.5.9"
  }
}