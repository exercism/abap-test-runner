{
  "name": "@exercism/abap-test-runner",
  "private": true,
  "description": "Automated Test runner for exercism solutions in ABAP.",
  "version": "0.1.0",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/exercism/abap-test-runner"
  },
  "directories": {
    "lib": "./dist",
    "test": "./test"
  },
  "bin": {
    "abap-test-runner": "bin/run.sh"
  },
  "scripts": {
    "build": "tsc --outDir ./dist && git clone --depth=1 https://github.com/open-abap/open-abap-core || true",
    "test": "npm run build && mocha"
  },
  "mocha": {
    "recursive": true,
    "timeout": 60000,
    "spec": "dist/test/**/*.js",
    "require": "source-map-support/register"
  },
  "dependencies": {
    "@abaplint/transpiler-cli": "^2.11.93",
    "@abaplint/transpiler": "^2.11.93",
    "@abaplint/cli": "^2.113.210",
    "@abaplint/runtime": "^2.11.93"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.5.0",
    "mocha": "^11.7.2",
    "source-map-support": "^0.5.21",
    "typescript": "^5.9.2",
    "@types/node": "^22.18.6"
  }
}